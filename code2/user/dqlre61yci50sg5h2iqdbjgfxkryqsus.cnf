[client]
default-character-set=utf8


[mysqld]
basedir = /opt/mysql/server-5.6
datadir = /data/mysql
character-set-server=utf8
collation-server = utf8_general_ci
init-connect = SET NAMES utf8
default-storage-engine  = innodb
transaction-isolation = REPEATABLE-READ
skip-external-locking
skip-name-resolve

max_connections = 300
max_connect_errors = 10000
wait_timeout = 600
max_allowed_packet = 33554432

log_output = FILE
log_error = /var/log/mysql/mysqld_error.log
general_log_file = /var/log/mysql/general_query_all.log
log-slow-admin-statements = 1
log-queries-not-using-indexes = 1
slow_query_log = 1
long_query_time = 2
slow_query_log_file = /var/log/mysql/slow_query.log
log-bin=mysql-bin
expire_logs_days = 5

thread_cache_size = 52
max_heap_table_size = 33554432
tmp_table_size = 524288
read_rnd_buffer_size = 1048576
join_buffer_size = 131072
query_cache_size = 54525952
query_cache_limit = 2097152
table_open_cache = 1800
key_buffer_size = 33554432
bulk_insert_buffer_size = 33554432
myisam_sort_buffer_size = 2097152
myisam_max_sort_file_size = 2147483648
myisam_recover_options = DEFAULT

innodb_file_format = Barracuda
innodb_read_io_threads = 4
innodb_write_io_threads = 4
innodb_stats_on_metadata = 1
innodb_max_dirty_pages_pct = 90
innodb_adaptive_hash_index = 1
innodb_adaptive_flushing = 1
innodb_strict_mode = 1
innodb_io_capacity = 600
innodb_autoinc_lock_mode = 1
innodb_change_buffering = inserts
innodb_old_blocks_time = 500
innodb_buffer_pool_size = 1073741824
innodb_file_per_table = 1
innodb_fast_shutdown = 0
innodb_thread_concurrency = 100


[mysqldump]
default-character-set=utf8


[mysql]
default-character-set=utf8 
show-warnings
prompt=\u@\h:\d\_\R:\m:\\s>
pager="less -n -i -F -X -E"
