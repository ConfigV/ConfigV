# THIS FILE IS AUTOGENERATED BY PUPPET

# The following options will be passed to all MySQL clients
[client]
port		= 3306
socket		= /var/lib/mysql/mysql.sock

# The MySQL server
[mysqld_safe]
# Logging
slow-query-log  = /var/log/mysql/slow.log
long_query_time = 2
log-warnings
log-queries-not-using-indexes

log-error          = /var/log/mysql/error.log

# general logging is a performance drag, enable at your own risk
#general_log_file        = /var/log/mysql/mysql.log
#general_log             = 1

# Relay log
relay-log       = /var/lib/mysql/relay-bin
relay-log-index = /var/lib/mysql/relay-bin.index

[mysqld]
user        = mysql
port		= 3306
socket		= /var/lib/mysql/mysql.sock
datadir     = /var/lib/mysql
skip-external-locking
key_buffer_size = 256M
max_allowed_packet = 1M
table_open_cache = 256
sort_buffer_size = 1M
read_buffer_size = 1M
read_rnd_buffer_size = 4M
myisam_sort_buffer_size = 64M
thread_cache_size = 8
query_cache_size= 16M
thread_concurrency = <%= processorcount.to_i * 2 %>

# Replication Master Server (default)
# binary logging is required for replication
log-bin       = /var/lib/mysql/mysql-bin.log
log-bin-index = /var/lib/mysql/mysql-bin.index

# binary logging format - mixed recommended
binlog_format=mixed

# required unique id between 1 and 2^32 - 1
# defaults to 1 if master-host is not set
# but will not function as a master if omitted
server-id	= <%= @mysql_server_id or 1 %>

# InnoDB
innodb_data_home_dir = /var/lib/mysql
innodb_data_file_path = ibdata1:10M:autoextend
innodb_log_group_home_dir = /var/lib/mysql
# You can set .._buffer_pool_size up to 50 - 80 %
# of RAM but beware of setting memory usage too high
innodb_buffer_pool_size = <%= (memorysizeinbytes.to_i / 2 / 1024 / 1024).to_i -%>M
innodb_additional_mem_pool_size = 20M
# Set .._log_file_size to 25 % of buffer pool size
innodb_log_file_size = <%= ((memorysizeinbytes.to_i / 2 / 1024 / 1024) * 0.25).to_i -%>M
innodb_log_buffer_size = 8M
innodb_flush_log_at_trx_commit = 1
innodb_flush_method = O_DSYNC
innodb_file_per_table
innodb_lock_wait_timeout = 35
interactive_timeout   = 28800
default-storage-engine = InnoDB

[mysqldump]
quick
max_allowed_packet = 16M

[mysql]
no-auto-rehash

[myisamchk]
key_buffer_size = 128M
sort_buffer_size = 128M
read_buffer = 2M
write_buffer = 2M

[mysqlhotcopy]
interactive-timeout

# Import additional settings, *.cnf
!includedir /etc/mysql/

