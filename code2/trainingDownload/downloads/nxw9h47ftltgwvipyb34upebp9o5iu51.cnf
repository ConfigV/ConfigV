[client]
port            = 3306
socket          = /tmp/mysql.sock

[mysqld]
port            = 3306
socket          = /tmp/mysql.sock
skip-external-locking
key_buffer_size = 16M
max_allowed_packet = 1M
table_open_cache = 64
sort_buffer_size = 512K
net_buffer_length = 8K
read_buffer_size = 256K
read_rnd_buffer_size = 512K
myisam_sort_buffer_size = 8M
thread_cache_size = 8
query_cache_size= 16M
# Try number of CPU's*2 for thread_concurrency
#thread_concurrency = 8
# Add By MTimer Start
pid-file = /tmp/mysql.pid
back_log = 500
datadir		= /mtimer/server/mariadb/data
default-storage-engine = InnoDB
character_set_server = utf8
tmpdir		= /tmp/

log-error = /mtimer/log/mariadb/mariadb_error.log
slow-query-log = 1
long_query_time= 5
slow_query_log_file = /mtimer/log/mariadb/mariadb_slow.log
#log-queries-not-using-indexes
# Add By MTimer End

#skip-networking
#log-bin=mysql-bin
#binlog_format=mixed

server-id       = 1

innodb_data_home_dir = /mtimer/server/mariadb/data
innodb_data_file_path = ibdata1:10M:autoextend
innodb_log_group_home_dir = /mtimer/server/mariadb/data
# You can set .._buffer_pool_size up to 50 - 80 %
# of RAM but beware of setting memory usage too high
innodb_buffer_pool_size = 16M
#innodb_additional_mem_pool_size = 2M
# Set .._log_file_size to 25 % of buffer pool size
innodb_log_file_size = 5M
innodb_log_buffer_size = 8M
innodb_flush_log_at_trx_commit = 1
innodb_lock_wait_timeout = 50
# Add By MTimer Start
innodb_file_per_table = 1
# Add By MTimer End

[mysqldump]
quick
max_allowed_packet = 16M

[mysql]
no-auto-rehash

[myisamchk]
key_buffer_size = 20M
sort_buffer_size = 20M
read_buffer = 2M
write_buffer = 2M

[mysqlhotcopy]
interactive-timeout