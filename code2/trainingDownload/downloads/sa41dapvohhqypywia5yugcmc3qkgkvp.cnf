[client]

socket		=	/var/lib/mysql/01/server.socket

[server]

user			=	mysql
bind-address	=	0.0.0.0

server-id	=	01
port		=	13301
datadir		=	/var/lib/mysql/01/
socket		=	/var/lib/mysql/01/server.socket
pid-file	=	/var/lib/mysql/01/server.pid

log_error	=	/var/lib/mysql/01/log-error

relay-log		=	/var/lib/mysql/01/log-relay-event
relay-log-index	=	/var/lib/mysql/01/log-relay-index
	
log_bin			=	/var/lib/mysql/01/log-local-event
log_bin_index	=	/var/lib/mysql/01/log-local-index

log_slave_updates	=	true

max_binlog_size		=	100M
expire_logs_days	=	20

auto_increment_offset = 01
auto_increment_increment = 2

master-retry-count	=	0
