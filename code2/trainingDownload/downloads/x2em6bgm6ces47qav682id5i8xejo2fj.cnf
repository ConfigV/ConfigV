#BEGIN CONFIG INFO
#DESCR: 4GB RAM, InnoDB only, ACID, few connections, heavy queries
#TYPE: SYSTEM
#END CONFIG INFO 

[client]
password    = mgtgn123
port        = 3306
socket      = /tmp/mysqld.sock 

[mysqld] 

port = 3306
socket = /tmp/mysqld.sock
basedir   = /usr/local/mysql
datadir = /usr/local/mysql/data
log-error = /server/logs/mysql-error.log 

back_log = 1500 

max_connections = 1500 
max_user_connections=1000

max_connect_errors = 30000 

table_open_cache = 4096 

max_allowed_packet = 32M 

max_heap_table_size = 64M 

read_buffer_size = 8M  

read_rnd_buffer_size = 8M  

sort_buffer_size = 8M  

join_buffer_size = 8M  

thread_cache_size = 300 

thread_concurrency = 32  

query_cache_size = 512M 

query_cache_limit = 2M  

ft_min_word_len = 4 

default-storage-engine = InnoDB 

thread_stack = 192K 

transaction_isolation = REPEATABLE-READ 

tmp_table_size = 96M 

slow_query_log 

long_query_time = 3 

server-id = 1 

key_buffer_size = 512M  

bulk_insert_buffer_size = 64M 

myisam_sort_buffer_size = 128M 

myisam_max_sort_file_size = 10G 

myisam_repair_threads = 1 

myisam_recover 

innodb_additional_mem_pool_size = 16M 

innodb_use_native_aio = 1 

innodb_buffer_pool_size = 4G 

innodb_data_file_path = ibdata1:1G:autoextend 

innodb_write_io_threads = 16
innodb_read_io_threads = 16 

innodb_thread_concurrency = 16 

innodb_flush_log_at_trx_commit = 2 

innodb_log_buffer_size = 8M 

innodb_log_file_size = 256M 

innodb_log_files_in_group = 3 

innodb_max_dirty_pages_pct = 90 

innodb_lock_wait_timeout = 120 

innodb_flush_method = O_DIRECT  ### 分别是fdatasync，O_DSYNC和O_DIRECT 如果不使用O_DIRECT，操作系统被迫开辟大量的Disk Cache用于innodb的读写缓存，不但没有提高读写性能，反而造成读写性能急剧下降。而且buffer pool的数据缓存和操作系统Disk Cache缓存造成了Double buffer的浪费，据说浪费得非常厉害。

[mysqldump]
quick
max_allowed_packet = 16M 

[mysql]
no-auto-rehash 

[myisamchk]
key_buffer_size = 512M
sort_buffer_size = 512M
read_buffer = 8M
write_buffer = 8M 

[mysqlhotcopy]
interactive-timeout 

[mysqld_safe]
open-files-limit = 8192