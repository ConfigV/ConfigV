#
# WARNING: This file is generated and controlled by configuration management.
# WARNING: All changes will be overwritten.
# WARNING: Please use -site and -local config files or conf.d directory instead.
#



[client]
socket		 = /var/mysql/run/mysql.sock



[mysqld]
user                = mysql
basedir             = /usr/local/mysql
pid-file            = /var/mysql/run/mysqld.pid
socket              = /var/mysql/run/mysql.sock
datadir             = /var/mysql/data
tmpdir              = /var/mysql/tmp
general_log_file    = /var/mysql/log/mysql_query.log
log-error           = /var/mysql/log/mysql_error.log
slow_query_log_file = /var/mysql/log/mysql_slow_query.log
skip_name_resolve

slow_query_log                = 1
long_query_time               = 1
log_queries_not_using_indexes = 1
min_examined_row_limit        = 5000

# FIXME currently disabled
#ssl
#ssl-cert = /etc/ssl/certs/mysql.cert
#ssl-key  = /etc/ssl/certs/mysql.key

key_buffer              = 32M
max_allowed_packet      = 32M
sort_buffer_size        = 8M
read_buffer_size        = 2M
read_rnd_buffer_size    = 4M
myisam_sort_buffer_size = 16M
net_buffer_length       = 64K
thread_stack            = 512K
thread_cache_size       = 16K
query_cache_size        = 32M
max_join_size           = 4294967295
open-files-limit        = 16384
table_cache             = 4096
table_definition_cache  = 4096
max_tmp_tables          = 128
tmp_table_size          = 33554432
max_heap_table_size     = 33554432

ignore-builtin-innodb
plugin-load=innodb=ha_innodb_plugin.so;innodb_trx=ha_innodb_plugin.so;innodb_locks=ha_innodb_plugin.so;innodb_lock_waits=ha_innodb_plugin.so;innodb_cmp=ha_innodb_plugin.so;innodb_cmp_reset=ha_innodb_plugin.so;innodb_cmpmem=ha_innodb_plugin.so;innodb_cmpmem_reset=ha_innodb_plugin.so
innodb_data_home_dir            = /var/mysql/data
innodb_data_file_path           = ibdata1:10M:autoextend
innodb_log_group_home_dir       = /var/mysql/data
innodb_buffer_pool_size         = 16M
innodb_additional_mem_pool_size = 2M
innodb_log_file_size            = 5M
innodb_log_buffer_size          = 8M
innodb_flush_log_at_trx_commit  = 1
innodb_lock_wait_timeout        = 50

wait_timeout        = 120
interactive_timeout = 120



[mysqldump]
quick
max_allowed_packet = 32M



[mysql]
auto-rehash



[isamchk]
key_buffer       = 128M
sort_buffer_size = 128M
read_buffer      = 2M
write_buffer     = 2M



[myisamchk]
key_buffer       = 128M
sort_buffer_size = 128M
read_buffer      = 2M
write_buffer     = 2M



[mysqlhotcopy]
interactive-timeout



# Include site and local configuration directives
!include    /etc/mysql/my.cnf-site
!include    /etc/mysql/my.cnf-local
!includedir /etc/mysql/conf.d
