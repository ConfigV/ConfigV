# mysql config file for medium systems.
#
# This is for a system with little memory (32M - 64M) where MySQL plays
# a important part and systems up to 128M where MySQL is used together with
# other programs (like a web server)
#

# The following options will be passed to all MySQL clients
[client]
port		= 3306
socket		= /var/run/mysqld/mysqld.sock
character_set           = latin1
loose-default-character-set = latin1

# The MySQL server
[mysqld]
port		= 3306
socket		= /var/run/mysqld/mysqld.sock
pid-file    = /var/run/mysqld/mysqld.pid
datadir		= /var/lib/mysql

skip-locking
myisam-recover  = BACKUP,FORCE

character-set-server    = latin1
default-character-set   = latin1

ssl      = 1
ssl-ca   =/etc/ssl/private/StartSSL.crt
ssl-cert =/etc/ssl/private/star_igowo_de.crt
ssl-key  =/etc/ssl/private/star_igowo_de.key

key_buffer_size = 16K
max_allowed_packet = 1M
table_open_cache = 4
sort_buffer_size = 64K
read_buffer_size = 256K
read_rnd_buffer_size = 256K
net_buffer_length = 2K
thread_stack = 128K

skip-innodb
#innodb_data_home_dir = /var/lib/mysql
#innodb_data_file_path = ibdata1:10M:autoextend
#innodb_buffer_pool_size = 384M
#innodb_additional_mem_pool_size = 20M
# we keep this at around 25% of of innodb_buffer_pool_size
# sensible values range from 1MB to (1/innodb_log_files_in_group*innodb_buffer_pool_size)
#innodb_log_file_size            = 100M
#innodb_log_buffer_size          = 8M
#innodb_flush_log_at_trx_commit  = 1
#innodb_lock_wait_timeout        = 50

# required unique id between 1 and 2^32 - 1
# defaults to 1 if master-host is not set
# but will not function as a master if omitted
server-id	= 1

[mysqldump]
quick
quote-names
max_allowed_packet = 16M

[mysql]

[isamchk]
key_buffer = 8M
sort_buffer_size = 8M
read_buffer = 2M
write_buffer = 2M

[myisamchk]
key_buffer = 8M
sort_buffer_size = 8M
read_buffer = 2M
write_buffer = 2M

[mysqlhotcopy]
interactive-timeout

