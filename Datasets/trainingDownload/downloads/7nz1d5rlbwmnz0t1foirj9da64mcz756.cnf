# These are some decent defaults for a development box
# double-check innodb_buffer_pool_size (make sure you have enough RAM)
# Last edited by Joshua Galbraith on July 25, 2012. :)

[mysql]
pager=less -niFX

# CLIENT #
port                           = 3306

[mysqld]

# GENERAL #
default_storage_engine         = InnoDB
pid_file                       = /ssd/mysql/mysql.pid
user                           = mysql

# MyISAM #
key_buffer_size                = 32M
myisam_recover                 = FORCE,BACKUP

# SAFETY #
innodb                         = FORCE
innodb_strict_mode             = 1
max_allowed_packet             = 16M
max_connect_errors             = 1000000
skip_name_resolve
sysdate_is_now                 = 1

# DATA STORAGE #
datadir                        = /ssd/mysql/

# CACHES AND LIMITS #
max_connections                = 500
max_heap_table_size            = 32M
open_files_limit               = 65535
query_cache_size               = 0
query_cache_type               = 0
table_definition_cache         = 1024
table_open_cache               = 4096
thread_cache_size              = 50
tmp_table_size                 = 32M

# INNODB #
innodb_buffer_pool_instances   = 4
innodb_buffer_pool_size        = 2G
innodb_file_format             = Barracuda
innodb_file_per_table          = 1
innodb_flush_log_at_trx_commit = 2
innodb_flush_method            = O_DIRECT
innodb_lock_wait_timeout       = 30
innodb_log_buffer_size         = 8M
#innodb_log_file_size           = 256M
innodb_log_files_in_group      = 2
innodb_old_blocks_time         = 1000
innodb_stats_on_metadata       = 0
innodb_thread_concurrency      = 8

# LOGGING #
log_queries_not_using_indexes  = 1
slow_query_log                 = 1
slow_query_log_file            = /ssd/mysql/mysql-slow.log

# UNICODE SUPPORT #
character_set_server           = utf8
collation_server               = utf8_unicode_ci
