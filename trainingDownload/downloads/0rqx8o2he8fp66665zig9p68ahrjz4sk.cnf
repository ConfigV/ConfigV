[client]
character-set-server = utf8
port = ${mysql_port}
socket = ${mysql_sock}

[mysqld]
skip-networking
skip-name-resolve

character-set-server = utf8
port = ${mysql_port}
socket = ${mysql_sock}
basedir = ${mysql_install}
datadir = ${mysql_data}
pid-file = ${mysql_pid}
log-error = ${mysql_error_log}

user = mysql
replicate-ignore-db = mysql
replicate-ignore-db = test
replicate-ignore-db = information_schema

open_files_limit= 10240
back_log = 600
max_connections = 5000
max_connect_errors = 6000
table_cache = 614
external-locking = FALSE
max_allowed_packet = 32M
sort_buffer_size = 16M
join_buffer_size = 16M
thread_cache_size = 300
#thread_concurrency = 8
query_cache_size = 512M
query_cache_limit = 128M
query_cache_min_res_unit = 2k
default-storage-engine = MyISAM
thread_stack = 192K
transaction_isolation = READ-COMMITTED
tmp_table_size = 512M
max_heap_table_size = 246M
long_query_time = 3
log-slave-updates
log-bin = ${mysql_bin_log}/binlog
binlog_cache_size = 4M
binlog_format = MIXED
max_binlog_cache_size = 8M
max_binlog_size = 1G
relay-log = ${mysql_relay_log}/relaylog
relay-log-index = ${mysql_relay_log}/relaylog
relay-log-info-file = ${mysql_relay_log}/relaylog
expire_logs_days = 30
key_buffer_size = 256M
read_buffer_size = 64M
read_rnd_buffer_size = 16M
bulk_insert_buffer_size = 64M
myisam_sort_buffer_size = 128M
myisam_max_sort_file_size = 10G
myisam_repair_threads = 1
myisam_recover

interactive_timeout = 120
wait_timeout = 120

#master-connect-retry = 10
slave-skip-errors = 1032,1062,126,1114,1146,1048,1396

#master-host = 192.168.1.2
#master-user = username
#master-password = password
#master-port = 3306

server-id = 1

innodb_additional_mem_pool_size = 16M
innodb_buffer_pool_size = 512M
innodb_data_file_path = ibdata1:256M:autoextend
innodb_file_io_threads = 4
innodb_thread_concurrency = 8
innodb_flush_log_at_trx_commit = 2
innodb_log_buffer_size = 16M
innodb_log_file_size = 128M
innodb_log_files_in_group = 3
innodb_max_dirty_pages_pct = 90
innodb_lock_wait_timeout = 120
innodb_file_per_table = 0

#log-slow-queries = ${mysql_slow_log}/slow.log
#long_query_time = 10

[mysqldump]
quick
max_allowed_packet = 32M
