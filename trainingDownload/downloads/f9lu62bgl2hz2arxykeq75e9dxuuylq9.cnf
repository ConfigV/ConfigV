## ---------------------------------------------------------------------------------------------
## [CLIENT] MySQL Common Client Configuration
## ---------------------------------------------------------------------------------------------
[CLIENT]
socket             = /tmp/mysql.sock
port               = 3306
default-character-set = utf8

## ---------------------------------------------------------------------------------------------
## [CLIENT] MySQL Command line client(mysql) Configuration
## ---------------------------------------------------------------------------------------------
[MYSQL]
no-auto-rehash
show-warnings
prompt=\u@\h:\d\_\R:\m:\\s>
pager="less -n -i -F -X -E"

## ---------------------------------------------------------------------------------------------
## [SERVER] MySQL Server Configuration
## ---------------------------------------------------------------------------------------------
[MYSQLD]
## MySQL Base options --------------------------------------------------------------------------
server-id = 1

user    = mysql
port    = 20306
basedir = /mysql/
datadir = /mysql/data
tmpdir  = /mysql/tmp
socket  = /tmp/mysql.sock
